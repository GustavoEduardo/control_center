
<%- include ("../../partials/head.ejs"); %>
<body>
	<%- include ("../../partials/header-admin.ejs"); %>

	<div class="limiter">
		<div class="container-table100">			
			<div   class="wrap-table100">

				<div class="card">
					<div class="card-header">
						<h2>Cadastro de novo Vendedor</h2>
					</div>
					<div class="card-body">
						<form method="POST" action="/createSeller"  onsubmit="comparaPass(event,this)">
							<span style="font-size: x-large; color: red; display: none;"><%=msg%></span>
							<hr>
							<h4>Informações Básicas</h4>
							<br>
							<div class="form-row">
								<div class="form-group col-md-6">
									<label for="name">Nome</label>
									<input type="text" class="form-control" placeholder="Informe o Nome do Vendedor" id="name" name="name" required>
								</div>
								<div class="form-group col-md-4">
									<label>Equipe</label>
									<select name="team" id="team" class="form-control" required>
										<option value="">Selecione</option>
										<option value="01">Felipe</option>
										<option value="02">Camila</option>
										<option value="03">Gustavo</option>															
									</select>
								</div>
							</div>
							<div class="form-row">
								<div class="form-group col-md-6">
									<label for="password">Email</label>
									<input class="form-control" type="email" id="email" name="email" placeholder="email@jmonix.com.br">
								</div>
							</div>						
							<hr>
							<h4>Informações de login</h4>
							<br>
							<div class="form-row">
								<div class="form-group col-md-3">
									<label for="login">Login</label>								
									<input class="form-control" type="text" id="login" name="login" placeholder="Informe o Login" required>
								</div>
								<div class="form-group col-md-3">
									<label for="password">Senha</label>
									<input class="form-control" type="password" id="password" name="password" placeholder="********" required>
								</div> 
								<div class="form-group col-md-3">
									<label for="password">Confirme a Senha</label>
									<input class="form-control" type="password" id="password-check" placeholder="********" required>
								</div>               												
							</div>
							
							<div style="width: 100%; margin-top: 25px;" class="form-row">
								<div class="form-group col-md-8">									
								</div>
								<div class="form-group col-md-2">												
									<button type="submit" class="form-control btn btn-success">Cadastrar <i class="fas fa-check"></i></button>
								</div>
								<div class="form-group col-md-2">
									<button onclick="window.history.back()" class="form-control btn btn-danger" >Cancelar <i class="fas fa-times"></i></button>
								</div>
								
							</div>
							
							
						</form>
					</div>

				</div>		
			</div>
		</div>			
	</div>

	<%- include ("../../partials/footer1.ejs"); %>
	
</body>
</html>