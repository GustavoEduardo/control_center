
<%- include ("../../partials/head.ejs"); %>
<body>
	<%- include ("../../partials/header-admin.ejs"); %>

	<div class="limiter">
		<div class="container-table100">			
			<div   class="wrap-table100">

				<div class="card">
					<div class="card-header">
						<h2>Edição de Vendedor</h2>
					</div>
					<div class="card-body">
						<form method="POST" action="/updateSeller"  > <!--onsubmit="comparaPass(event,this)" -->
							<span style="font-size: x-large; color: red; display: none;"><%=msg%></span>
							<input type="hidden" name="id" value="<%=seller.id %>">
                            <hr>
							<h4>Informações Básicas</h4>
							<br>
							<div class="form-row">
								<div class="form-group col-md-6">
									<label for="name">Nome</label>
									<input value="<%=seller.name %>" type="text" class="form-control"  id="name" name="name" required>
								</div>
								<div class="form-group col-md-4">
									<label>Equipe</label>
									<select name="team" id="equipe" class="form-control" required>
										<option value="<%=seller.team %>"></option>
										<option id="01" value="01">Felipe</option>
										<option id="02" value="02">Camila</option>
										<option id="03" value="03">Gustavo</option>															
									</select>
								</div>
							</div>
							<div class="form-row">
								<div class="form-group col-md-6">
									<label for="password">Email</label>
									<input value="<%=seller.email %>" class="form-control" type="email" id="email" name="email" >
								</div>
								<div class="form-group col-md-4">
									<label>Status</label>
									<select name="status" class="form-control" required>
										<option value="">Selecione</option>
										<option value="ativo">Ativo</option>
										<option value="inativo">Inativo</option>														
									</select>
								</div>
							</div>						
							<hr>
							<h4>Informações de login</h4>
							<br>
							<div class="form-row">
								<div class="form-group col-md-3">
									<label for="login">Login</label>								
									<input disabled class="form-control" type="text" id="login" name="login" value="<%=seller.login %>" required>
								</div>
                        
								<div class="form-group col-md-3">
                                    <p>Nova senha***</p>
									<!-- <label for="password">Senha</label>
									<input class="form-control" type="password" id="password" name="password" placeholder="********" required> -->
								</div> 
								<div class="form-group col-md-3">
									<!-- <label for="password">Confirme a Senha</label>
									<input class="form-control" type="password" id="password-check" placeholder="********" required> -->
								</div>               												
							</div>
							
							<div style="width: 100%; margin-top: 25px;" class="form-row">
								<div class="form-group col-md-8">									
								</div>
								<div class="form-group col-md-2">												
									<button type="submit" class="form-control btn btn-success">Salvar <i class="fas fa-check"></i></button>
								</div>
								<div class="form-group col-md-2">
									<button onclick="window.history.back()" class="form-control btn btn-danger" >Cancelar <i class="fas fa-times"></i></button>
								</div>
								
							</div>
							
							
						</form>
					</div>

				</div>		
			</div>
		</div>			
	</div>
	<script>
		//Seleciona nome da equipe no option
		
		function selected(){

			var equipe = document.getElementById("equipe");
			if(equipe.value == "01"){

				document.getElementById("01").setAttribute("selected", "selected");
				document.getElementById("02").removeAttribute("selected");
				document.getElementById("03").removeAttribute("selected");

			}else if(equipe.value == "02"){

				document.getElementById("01").removeAttribute("selected");
				document.getElementById("02").setAttribute("selected", "selected");
				document.getElementById("03").removeAttribute("selected");

			}else if(equipe.value == "03"){
				document.getElementById("01").removeAttribute("selected");
				document.getElementById("02").removeAttribute("selected");
				document.getElementById("03").setAttribute("selected", "selected");
			}else{
				document.getElementById("01").removeAttribute("selected");
				document.getElementById("02").removeAttribute("selected");
				document.getElementById("03").removeAttribute("selected");
			}
		}
			

		selected()
	
	</script>



	<%- include ("../../partials/footer1.ejs"); %>


	
</body>
</html>