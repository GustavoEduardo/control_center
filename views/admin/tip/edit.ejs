
<%- include ("../../partials/head.ejs"); %>
<body>
	<%- include ("../../partials/header-admin.ejs"); %>

	<div class="limiter">
		<div class="container-table100">			
			<div   class="wrap-table100">

				<div class="card">
					<div class="card-header">
						<h2>Edição de Dica</h2>
					</div>
					<div class="card-body">
						<form method="POST" action="/updatetip">
                            <input type="hidden" value="<%=t.id%>" name="id">
							<span style="font-size: x-large; color: red;"><%=msg%></span>
							<hr>
							<h4>Características da Dica</h4>
							<br>
							<div class="form-row">
								<div class="form-group col-md-8">
									<label for="nome">Título</label>
									<input type="text" class="form-control" value="<%=t.title%>" name="title" required>
								</div>
	
							</div>
							<div class="form-row">
								<div class="form-group col-md-12">
									<label for="password">Descrição</label>
									<textarea class="campo-de-texto form-control" name="description" rows="20"><%=t.description%></textarea>
								</div>
								
							</div>						
							<hr>
							<div style="width: 100%; margin-top: 25px;" class="form-row">
								<div class="form-group col-md-8">									
								</div>
								<div class="form-group col-md-2">												
									<button type="submit" class="form-control btn btn-success">Salvar <i class="fas fa-check"></i></button>
								</div>
								<div class="form-group col-md-2">
									<button type="button" onclick="window.history.back()" class="form-control btn btn-danger" >Cancelar <i class="fas fa-times"></i></button>
								</div>
								
							</div>
							
							
						</form>
					</div>

				</div>		
			</div>
		</div>			
	</div>

	<%- include ("../../partials/footer1.ejs"); %>

	<script src="/tinymce/tinymce.min.js"></script><!--Importando editor na pasta public-->
	<script>//configurando tynymce
		tinymce.init({
			language: 'pt_BR',//baixar em https://www.tiny.cloud/get-tiny/language-packages/ e colar na pasta langs
			selector: ".campo-de-texto",//class name da textarea a ser utilizada 
			plugins: [
				'lists spellchecker advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
			],//plugins com mais funcionalidades
		})
	</script>
	
</body>
</html>